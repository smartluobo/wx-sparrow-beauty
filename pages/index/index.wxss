/**index.wxss**/
@import "./weui.wxss";
@import "../../template/courseList/courseList.wxss";
.goods-block{
  background: rgba(0,0,0,0.0)
}
.goods-box {
  width: calc(50% - 30rpx);
  margin-left: 20rpx;
  margin-top:20rpx;
  height: 300rpx;
  display: inline-block;
  vertical-align: top;
}

.flex-wrp{
  flex-direction: row;
  display: flex;
  flex-wrap: nowrapï¼›
}
page {
  background-color: #F8F8F8;
  font-size: 16rpx;
}
.page-body{
  margin: 0rpx 0rpx;
  width: 100%;
  background: #fff;
}
.page-section_center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page-section:last-child{
  margin-bottom: 0;
}
.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.page-section-spacing{
  box-sizing: border-box;
  padding: 0 0rpx;
}

button{
  margin-bottom: 30rpx;
}
button:last-child{
  margin-bottom: 0;
}

.swiper{
  height: 400rpx;
}
.swiper-item{
  display: block;
  height: 400rpx;
  width: 100%;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.page-section-title{
  text-align:center;
  height: 170rpx;
}
.info{
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}
.page-foot{
  margin-top: 50rpx;
}

.nav_list{
    float: left;
    width: 20%;
    text-align: center;
}
.nav_list view{
    /* background: #333; */
  
    padding: 40rpx 20rpx 0;
}
.nav_list view image{
    width: 60rpx;
    height: 60rpx;
}
.nav_list text{
    color: #666;
    font-size: 28rpx;
    line-height: 40rpx;
}
.title-font{
  height: 60rpx;
}
.title-font-img{
  height: 30rpx;
  width: 100%;
  margin-top: 15rpx;
}
.content_banner{
    height: 200rpx;
    width: 730rpx;
    overflow: hidden;
    padding: 10rpx;
    border-top: 15rpx solid #f2f2f2;
    border-bottom: 15rpx solid #f2f2f2;
}
.content_banner view:last-child{
    float: right;
    padding: 10rpx;
}
.content_banner view{
    float: left;
    padding: 10rpx;
}
.content_banner image{
    height: 180rpx;
    width: 345rpx;
}
